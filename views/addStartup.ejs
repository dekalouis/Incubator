<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Startup - <%= incubator.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="container">
    <%- include('partials/nav') %>

    <div class="mt-4">
      <h1 class="mb-3">Add New StartUp</h1>
      <h3 class="text-muted">Incubator: <%= incubator.name %></h3>

      <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger"><%= errors.join(", ") %></div>
      <% } %>

      <form action="/incubators/<%= incubator.id %>/startUp/add" method="POST">
        <div class="mb-3">
          <label class="form-label">StartUp Name</label>
          <input type="text" name="startUpName" class="form-control" />
        </div>

        <div class="mb-3">
          <label class="form-label">Founder Name</label>
          <input type="text" name="founderName" class="form-control" />
        </div>

        <div class="mb-3">
          <label class="form-label">Date Found</label>
          <input type="date" name="dateFound" class="form-control" />
        </div>

        <div class="mb-3">
          <label class="form-label">Education of Founder</label>
          <select name="educationOfFounder" class="form-select">
            <option value="" disabled selected>Select Education</option>
            <% degrees.forEach((el) => { %>
            <option value="<%= el %>"><%= el %></option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Role of Founder</label>
          <% roles.forEach((el) => { %>
          <div class="form-check">
            <input
              type="radio"
              class="form-check-input"
              name="roleOfFounder"
              value="<%= el %>"
            />
            <label class="form-check-label"><%= el %></label>
          </div>
          <% }) %>
        </div>

        <div class="mb-3">
          <label class="form-label">Valuation</label>
          <input type="number" name="valuation" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </body>
</html>
