<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StartUps</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="container">
    <%- include('partials/nav') %>

    <div class="mt-4">
      <h1>StartUps</h1>

      <br />
      <div class="mb-3">
        <a
          href="/startUp"
          class="btn btn-outline-dark <%= !selectedRole ? 'active' : '' %>"
          >All</a
        >
        <% roles.forEach(role => { %>
        <a
          href="/startUp?role=<%= role %>"
          class="btn btn-outline-dark <%= selectedRole === role ? 'active' : '' %>"
        >
          <%= role %>
        </a>
        <% }); %>
      </div>

      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th>StartUp and Founder Name</th>
            <th>Role of Founder</th>
            <th>Valuation</th>
            <th>Incubator Code</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% startups.forEach(el => { %>
          <tr>
            <td><%= el.startUpName %> - <%= el.founderName %></td>
            <td><%= el.roleOfFounder %></td>
            <td><%= el.valuation %></td>
            <td><%= el.Incubator.code %></td>
            <td>
              <a
                href="/incubators/<%= el.IncubatorId %>/startUp/<%= el.id %>/delete"
                class="btn btn-sm btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
